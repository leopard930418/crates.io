<ul>
  {{#each @keywords as |keyword|}}
    <li>
      <LinkTo @route="keyword" @model={{keyword}}>
        <span>{{ keyword.id }} ({{ format-num keyword.crates_cnt }})</span>
        <div class='arrow-in-list'>
          {{svg-jar "right-arrow"}}
        </div>
      </LinkTo>
    </li>
  {{/each}}
</ul>

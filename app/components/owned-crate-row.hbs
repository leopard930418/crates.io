<li local-class="row" data-test-owned-crate={{this.name}} ...attributes>
  <Input
    @type="checkbox"
    @name={{this.controlId}}
    id={{this.controlId}}
    @checked={{this.emailNotifications}}
    @change={{action "toggleEmailNotifications"}}
  />
  <label for="{{ this.controlId }}">
    {{ this.name }}
  </label>
</li>
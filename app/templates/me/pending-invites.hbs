{{ title 'Pending Invites' }}

<div class="crates-heading">
  {{svg-jar "gear"}}
  <h1>Pending Owner Invites</h1>
</div>

<div local-class="list">
  {{#each this.model as |invite|}}
    <PendingOwnerInviteRow @invite={{invite}} local-class="row" data-test-invite={{invite.crate_name}} />
  {{else}}
    <p local-class="row" data-test-empty-state>You don't seem to have any pending invitations.</p>
  {{/each}}
</div>

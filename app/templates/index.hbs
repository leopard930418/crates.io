      {{else}}
        {{#each this.model.popular_categories as |category|}}
          <li>
            <FrontPageList::Item
              @route="category"
              @model={{category.slug}}
              @title={{category.category}}
              @subtitle="{{format-num category.crates_cnt}} crates"
            />
          </li>
        {{/each}}
      {{/if}}
    </ul>
  </section>
</div>

{{ title this.keyword.keyword ' - Keywords' }}

<div class="crates-heading">
  {{svg-jar "crate"}}
  <h1>All Crates</h1>
  <h2>for keyword '{{ this.keyword.keyword }}'</h2>
</div>

<div id='results'>
  <ResultsCount
    @start={{this.currentPageStart}}
    @end={{this.currentPageEnd}}
    @total={{this.totalItems}}
    data-test-keyword-nav
  />

  <div data-test-keyword-sort>
    <span class='small'>Sort by</span>
    <Dropdown as |dd|>
      <dd.Trigger class="dropdown-button" data-test-current-order>
        {{svg-jar "sort"}}
        {{ this.currentSortBy }}
      </dd.Trigger>

      <dd.Menu as |menu|>
        <menu.Item>
          <LinkTo @query={{hash sort="alpha"}}>
            Alphabetical
          </LinkTo>
        </menu.Item>
        <menu.Item>
          <LinkTo @query={{hash sort="downloads"}}>
            All-Time Downloads
          </LinkTo>
        </menu.Item>
        <menu.Item>
          <LinkTo @query={{hash sort="recent-downloads"}}>
            Recent Downloads
          </LinkTo>
        </menu.Item>
        <menu.Item>
          <LinkTo @query={{hash sort="recent-updates"}}>
            Recent Updates
          </LinkTo>
        </menu.Item>
        <menu.Item>
          <LinkTo @query={{hash sort="new"}}>
            Newly Added
          </LinkTo>
        </menu.Item>
      </dd.Menu>
    </Dropdown>
  </div>
</div>

<div local-class="list">
  {{#each this.model as |crate|}}
    <CrateRow @crate={{crate}} local-class="row" />
  {{/each}}
</div>

<Pagination @pages={{this.pages}} @prevPage={{this.prevPage}} @nextPage={{this.nextPage}} />

{{ title 'Crates' }}

<div id='crates-heading' class='crate-index'>
  <div class='info'>
    {{svg-jar "crate"}}
    <h1>All Crates</h1>
  </div>
  {{#if letter}}
    <h2>starting with '{{ letter }}'</h2>
  {{/if}}
</div>

<div id='selection'>
  {{#each alphabet as |letter|}}
    <LinkTo @query={{hash letter=letter page=1}}>
      {{ letter }}
    </LinkTo>
  {{/each}}

  <XSelect @value={{letter}} @action={{action (mut letter)}} as |xs|>
    <option>Filter by the letter...</option>
    {{#each alphabet as |letter|}}
      <xs.option @value={{letter}}>{{ letter }}</xs.option>
    {{/each}}
  </XSelect>
</div>

<div id='results'>
  <div class='nav' data-test-crates-nav>
    <span class='amt small'>
      Displaying
      <span class='cur' data-test-current-rows>{{ currentPageStart }}-{{ currentPageEnd }}</span>
      of <span class='total' data-test-total-rows>{{ totalItems }}</span> total results
    </span>
  </div>

  <div class='sort' data-test-crates-sort>
    <span class='small'>Sort by</span>

    <RlDropdownContainer @class="dropdown-container">
      <RlDropdownToggle @tagName="a" @class="dropdown" data-test-current-order={{true}}>
        {{svg-jar "sort"}}
        {{ currentSortBy }}
        <span class='arrow'></span>
      </RlDropdownToggle>

      <RlDropdown @tagName="ul" @class="dropdown">
        <li>
          <LinkTo @query={{hash page=1 sort="alpha"}}>
            Alphabetical
          </LinkTo>
        </li>
        <li>
          <LinkTo @query={{hash page=1 sort="downloads"}}>
            All-Time Downloads
          </LinkTo>
        </li>
        <li>
          <LinkTo @query={{hash page=1 sort="recent-downloads"}}>
            Recent Downloads
          </LinkTo>
        </li>
        <li>
          <LinkTo @query={{hash page=1 sort="recent-updates"}}>
            Recent Updates
          </LinkTo>
        </li>
      </RlDropdown>
    </RlDropdownContainer>
  </div>
</div>

<div id='crates' class='white-rows'>
  {{#each model as |crate index|}}
    <CrateRow @crate={{crate}} data-test-crate-row={{index}} />
  {{/each}}
</div>

<nav class='pagination' aria-label="Pagination navigation">
  <LinkTo @query={{hash page=prevPage}} class="prev" @rel="prev" @title="previous page" data-test-pagination-prev={{true}}>
    {{svg-jar "left-pag"}}
  </LinkTo>
  <ol>
    {{#each pages as |page|}}
      <li>
        <LinkTo @query={{hash page=page}} @title={{concat "Go to page " page}}>
          {{ page }}
        </LinkTo>
      </li>
    {{/each}}
  </ol>
  <LinkTo @query={{hash page=nextPage}} class="next" @rel="next" @title="next page" data-test-pagination-next={{true}}>
    {{svg-jar "right-pag"}}
  </LinkTo>
</nav>
